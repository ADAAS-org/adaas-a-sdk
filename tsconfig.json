{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "jsx": "react",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@adaas/a-sdk/a-concept/entities/*": ["src/entities/*"],
      "@adaas/a-sdk/a-concept/components/*": ["src/components/*"],
      "@adaas/a-sdk/a-concept/commands/*": ["src/commands/*"],
      "@adaas/a-sdk/a-concept/containers/*": ["src/containers/*"],
      "@adaas/a-sdk/a-concept/context/*": ["src/context/*"],


      "@adaas/a-sdk/constants/*": ["src/constants/*"],
      "@adaas/a-sdk/types/*": ["src/types/*"],
      "@adaas/a-sdk/helpers/*": ["src/helpers/*"]
    },
    "lib": [
      "dom",
      "esnext.asynciterable",
      "es2015",
      "es2016",
      "es2017.object"
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*", 
    "index.ts"  
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
    "node_modules/@types/mocha/index.d.ts"
  ]
}